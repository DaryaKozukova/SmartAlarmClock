<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="60dip" />
            <stroke android:width="2dip" android:color="#594568" />
            <gradient android:angle="180" android:startColor="#3a1227" android:endColor="#511535" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="60dip" />
            <stroke android:width="2dip" android:color="#594568" />
            <gradient android:angle="180" android:startColor="#3a1227" android:endColor="#511535" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="60dip" />
            <stroke android:width="2dip" android:color="#674F79" />
            <gradient android:angle="180" android:startColor="#511535" android:endColor="#701344" />
        </shape>
    </item>
</selector>
